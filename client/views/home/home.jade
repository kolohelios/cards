.container
  .row
    .col-xs-12
      h1 Welcome to Tic!
      form(name="playerForm", novalidate="")
        .form-group
          label(for="email") Email
          input#email.form-control(type="email", name="email", ng-model="player.email")
        .form-group
          label(for="password") Password
          input#password.form-control(type="password", name="password", ng-model="player.password")
        .form-group
          button.btn.btn-default(type="submit", ng-click="submit(player, 'register')") Register
          button.btn.btn-default(type="submit", ng-click="submit(player, 'login')") Login
          button.btn.btn-primary(type="submit", ng-click="oauth('facebook')")
            i.fa.fa-facebook-square Facebook
          button.btn.btn-primary(type="submit", ng-click="oauth('twitter')")
            i.fa.fa-twitter-square Twitter
